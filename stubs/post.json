{
    "module_name": "Post",
    "components": [
        {
            "name": "Post",
            "table": "posts",
            "attributes": [
                {
                    "name": "title",
                    "type": "string",
                    "length": 255,
                    "nullable": false,
                    "unique": true
                },
                {
                    "name": "body",
                    "type": "text",
                    "nullable": true
                },
                {
                    "name": "is_published",
                    "type": "boolean",
                    "default": false
                },
                {
                    "name": "author_id",
                    "type": "foreignId",
                    "on": "users",
                    "onDelete": "cascade"
                }
            ]
        }
    ]
}